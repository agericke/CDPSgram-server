<h3>Create new album</h3>

<form class="form-horizontal" method='POST' action='/albums/create'>
  <div class="form-group">
    <label class="control-label col-sm-2" for="name">Name of the album: </label>
    <div class="col-sm-10">
     <input class="form-control" type="text" id="name" name="name" value="" />
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <div class="checkbox">
       <label><input type="checkbox" name="isPrivate">Make it private</label>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <a href="/albums"><input type="button" class="btn btn-primary" value="Cancel" /></a>
      <input type="submit" value="Create" class="btn btn-primary" onClick="this.disable=true; this.value ='Creating...'; this.form.submit();"/>
    </div>
  </div>
  <div>
  </div>
</div>
</form>