<h2>Login</h2>

<form class="form-horizontal" method='POST' action='/session'>

  <input type='hidden' name='redir' value='<%= redir %>'>

  <div class="form-group">
    <label class="control-label col-sm-2" for="login">Login:</label>
    <div class="col-sm-10">
      <input class="form-control" type="text" id="login" name="login" size="30" />
    </div>
  </div>

  <div class="form-group">
    <label class="control-label col-sm-2" for="password">Password:</label>
    <div class="col-sm-10">
      <input class="form-control" type="password" id="password" name="password" size="30" />
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
     <input class="btn btn-primary" name="commit" type="submit" value="Login" />
    </div>
  </div>

</form>